{
  "version": 2,
  "builds": [
    {
      "src": "server/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "/public/index.html"
    }
  ],
  "env": {
    "MONGO_URI": "@MONGO_URI",
    "GEMINI_API_KEY": "@GEMINI_API_KEY",
    "JWT_SECRET": "@JWT_SECRET"
  }
}
